@model List<CourseDto>
@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}

<h2>Kurslar</h2>
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || (count % 3) == 1)
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2'>")
        }

        <div class="col">
            <div class="card">
                <img src="@item.StockPictureUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="badge bg-primary">
                        Kategori : <strong>@item.Category.Name</strong>
                    </div>
                    <p class="card-text">@item.ShortDescription</p>
                    <h4 class="text-primary">@item.Price TL</h4>
                    <div class="d-grid gap-2">
                        <a asp-route-id="@item.Id" asp-controller="Home" asp-action="Details" class="btn btn-primary">Detay</a>
                    </div>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}