@model SigninInput
@{
    ViewData["Title"] = "Signin";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Üye giriş</h5>
                <form asp-controller="Auth" asp-action="Signin" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input type="password" class="form-control" id="password" asp-for="Password">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" asp-for="IsRemember">
                        <label class="form-check-label" for="exampleCheck1" asp-for="IsRemember"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    <div class="alert alert-danger my-2" asp-validation-summary="ModelOnly"></div>
                </form>

            </div>
        </div>
    </div>
</div>


