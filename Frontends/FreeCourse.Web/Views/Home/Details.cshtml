@model CourseDto
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <img src="@Model.StockPictureUrl" class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title">
                    @Model.Name
                </h5>
                <p class="card-text">
                    @Model.Description
                </p>
                <div class="badge bg-primary">
                    Kategori : <strong>@Model.Category.Name</strong>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Fiyat : @Model.Price TL
                </h5>
                <div class="d-grid gap-2">
                    <a asp-controller="Basket" asp-action="AddBasketItem" asp-route-courseId="@Model.Id" class="btn btn-primary btn-block">Sepete Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

