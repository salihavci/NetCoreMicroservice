@model UpdateCourseInput
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurs Güncelleme</h5>
                <form asp-controller="Courses" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    @Html.HiddenFor(x=> x.Id)
                    @Html.HiddenFor(x=> x.UserId)
                    @Html.HiddenFor(x=> x.Picture)
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.CategoryList">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control">
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Feature.Duration" class="form-label"></label>
                        <input asp-for="Feature.Duration" class="form-control">
                        <span class="text-danger" asp-validation-for="Feature.Duration"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Photo" class="form-label"></label>
                        <input type="file" asp-for="Photo" class="form-control">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Kurs Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>



